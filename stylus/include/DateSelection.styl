.DateSelection {
    border: 1px solid;
    border-radius: 10px;
    background-color: #f7f7f7;

    .signup-header {
        margin: 15px auto;
    }

    .subheader {
        text-align: center;
    }

    .share-dates {
        border-top: 1px solid;
        padding: 35px 0 35px 15px;

        &.has-error {
            .error {
                text-align: center;
            }
        }

        .pickup-date {
            background-color: #555;
            border: 1px solid beige;
            box-shadow: 1px 2px 5px #ccc;
            color: darken(#c98702, 5%);
            opacity: .7;
            cursor: pointer;
            display: inline-block;
            font-family: "RalewayRegular";
            padding: 10px;
            margin: 1px;
            text-align: center;
            line-height: 1.2;

            &:hover {
                background-color: lighten(#555, 5%);
            }
            
            &.selected {
                background-color: rgba(201, 135, 2, .3);
                color: #c98702;
                opacity: 1;
            }
            
            &.unselectable {
                background-color: rgba(85,85,85,0.1);
                cursor: not-allowed;
                opacity: .3;
            }

            >div {
                font-weight: bold;

                &:first-child {
                    font-weight: normal;
                }
            }
        }
    }
    
    @media only screen and (max-width: 767px) {
        .date-selection {

            .share-dates {
                padding: 0 0 35px;

                .share-label {
                    text-align: center;
                    font-size: 1.2rem;                   
                    margin: 35px auto;                    
                }

                .pickup-date {
                    padding: 8px;
                    margin: 0;
                }
            }
        }
    }      
}