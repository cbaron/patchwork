.modal-content
    border-radius: 0

    .modal-header
        background-color: $sun-red
        color: white
        
        >button.close
            color: white
            opacity: 1
  
    .btn-primary
        background-color: $sun-yellow
        color: black
        border-color: darken($sun-yellow, 5%)
        
    .modal-body .img-row
        display: flex
        align-items: center
        justify-content: center
        flex-wrap: wrap
        padding: 1rem 0
        
        >div
            flex: 1
            
            >img
                width: 100%