.Header
    font-family: "RalewayRegular"
    
    >div:first-child img
        width: 100%
        height: 15rem
        margin: 0
        
    >div:nth-child(2)
        background-color: black
        color: white
        padding: .5rem
        line-height: 1
        
        >div:first-child
            text-align: center
            
            >span
                font-size: 6rem
                text-transform: uppercase
                cursor: pointer
                
                &:hover
                    color: $sun-yellow
            
        ul
            display: flex
            justify-content: center
            align-items: center
            flex-wrap: wrap
            line-height: 1.3
            
            li
                margin: 0 1.75rem
                font-size: 2rem
                cursor: pointer
                
                &:hover
                    opacity: .85
                    
    @media only screen and (min-width: 768px)

        ul >li:first-child
            display: none
            
    @media only screen and (max-width: 1250px)
        >div:nth-child(2)
            >div:first-child >span
                font-size: 4.5rem
                
            ul li
                font-size: 1.5rem
                
    @media only screen and (max-width: 900px)
        >div:nth-child(2)
            >div:first-child >span
                font-size: 4rem
            