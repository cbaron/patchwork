.Header
    font-family: "RalewayRegular"
    
    >div:first-child img
        width: 100%
        height: auto
        margin: 0
        
    >div:nth-child(2)
        background-color: black
        color: white
        padding: .2rem 1rem
        line-height: 1
        
        >div:first-child
            text-align: center
                        
            >svg
                display: none
            
            >div
                font-size: 2.5rem
                padding: .75rem 1rem .25rem
                text-transform: uppercase
                cursor: pointer
                
                &:active
                    color: $sun-yellow
                
                html.non-touch &
                    &:hover
                        color: $sun-yellow
                        transition: color .3s ease-in-out
            
        ul
            display: flex
            justify-content: center
            align-items: center
            flex-wrap: wrap
            
            li
                padding: .5rem .75rem
                font-size: 1.2rem
                cursor: pointer
                
                &:active
                    opacity: .85
                
                html.non-touch &
                    &:hover
                        background-color: $sun-red
                        transition: background-color .3s ease-in-out

    @media only screen and (min-width: 1500px)
        >div:nth-child(2)
            >div:first-child >div
                font-size: 3rem
                
            ul li
                font-size: 1.4rem
                
    @media only screen and (max-width: 767px)
        >div:nth-child(2)
            position: relative
            
            >div:first-child
                display: flex
                align-items: center
                
                svg
                    display: block
                    cursor: pointer
                    height: 1.5rem
                    stroke: white
                    padding: 0 .5rem

                >div
                    font-size: 2rem
                    padding: .5rem 1rem
                    text-align: center
                    flex: 1
                
            ul
                text-align: center
                position: absolute
                z-index: 2
                left: -16rem
                width: 16rem
                transition: transform .4s ease-in-out
                z-index: 1000
                margin-top: .15rem
                
                li
                    font-size: 1.25rem
                    width: 100%
                    padding: .75rem
                    margin: 0
                    border: 1px solid $sun-yellow
                    background-color: black
                        
                    &:active
                        background-color: $sun-yellow
                        color: black
                        opacity: 1
                    
                &.is-mobile
                    transform: translateX(16rem)
                    
    @media only screen and (max-width: 475px)
        >div:nth-child(2)
            >div:first-child
                >div
                    font-size: 1.75rem
                
            ul
                left: -12rem
                width: 12rem
                
                li
                    font-size: 1rem
                    
                &.is-mobile
                    transform: translateX(12rem)
                
    @media only screen and (max-width: 400px)
        >div:nth-child(2)
            >div:first-child
                svg
                    height: 1.25rem

                >div
                    font-size: 1.2rem
        
                    

            