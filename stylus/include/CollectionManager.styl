.CollectionManager
    display: flex
    height: 100%
    background-color: $sun-red
    padding: 0
    margin: 0
    
    section
        padding: 0
        margin: 0
        
    .btn-submit
        width: 8rem
        background-color: white
        color: $sun-red
        border: 1px solid
        cursor: pointer
        padding: .5rem .75rem
        margin: 0 .25rem
        text-align: center 
        transition: all .15s ease-in-out               
        
        &:hover
            background-color: $sun-red
            color: white
                
    .btn-cancel
        width: 8rem
        background-color: white
        color: black
        border: 1px solid
        cursor: pointer
        padding: .5rem .75rem
        margin: 0 .25rem
        text-align: center 
        transition: all .15s ease-in-out               
        
        &:hover
                background-color: black
                color: white

    .left-panel
        flex: 1
        text-align: left
        background-color: $sun-red
        color: white
        height: 100%
        
        .List .list li
            padding: .15rem .3rem
            &:hover
                background-color: white
                color: $sun-red
            >.buttons
                right: .3rem
        
        .link, .heading
            color: white

        >section
            padding: 1rem
            
            &:first-child svg
                margin-right: .25rem

        >section+section, >section:first-child
            border-bottom: 1px solid white

        svg
            height: .75rem
            width: .75rem

        .side-by-side
            display: flex
            align-items: center

            >*:last-child
                padding-left: .5rem
                
        .button-row
            margin: 0

        button
            background-color: $sun-red
            font-size: .85rem
            padding: .5rem 0 0
            
            &.side-by-side >span:first-child
                font-size: 1.5rem
                color: black

            &:hover
                font-weight: 700
                text-decoration: none


        .Collections
            li
                padding: .25rem 0rem

    .main-panel
        background-color: $manila
        border-left: 1px solid $manila
        flex: 4
        height: 100%
        overflow-x: hidden
        padding: 0 1rem 2rem

        >.List
            display: flex
            flex-direction: column
            height: 100%
            padding-top: 2rem

            ol
                overflow-y: auto
                height:100%
                color: $sun-red
                 
                >li, >div
                    margin-right: 2rem                   
                    .item
                        padding: 1rem 2rem
                        
            .button-row
                margin: 2rem 0 0
                        
                .floating
                    margin: 0 1rem

        >.Form >.form-box >form
            padding: 0 1rem 0 2rem

        .Form
            height: 100%
            display: flex
            flex-direction: column
            
	        .form-box
                display: flex
                flex-direction: column

                form
                    overflow-y: auto

                    .form-group
                        align-items: center
                        display: flex
                        margin: 1rem 0rem
                        
                        label
                            text-align: center
                        
                        >.List
                            margin: 2.5rem 0
                            
                            >.button-row
                                position: absolute
                                left: 3rem
                                bottom: -2.5rem
                                margin: 0
                                
                        .btn-yellow
                            font-size: .9rem
                            padding: .35rem 1rem .2rem
                            border-radius: .3rem
                            box-shadow: 1px 2px 2px #666
                                    
                        
                        &:not(.vertical) >label
                            font-weight: bold
                            color: inherit

                        >*:first-child
                            flex: 1
                        >*:nth-child(2)
                            flex: 6
                            
                        &.vertical
                            flex-direction: column
                            align-items: center
                            margin: 3rem 0
                            
                            >label
                                margin-right: 0
                                width: 100%
                                
                        &.has-image
                            flex-wrap: wrap
                            
                            >div
                                width: 100%
                                margin: 1rem 0
                                text-align: center

                                img
                                    max-height: 6rem
                                    margin-left: 1rem

                                
            .btn-row
                margin: 2rem 0
