.CollectionManager
    display: flex
    height: 100%
    padding: 6rem 0 0
    
    section
        padding: 0

    .left-panel
        flex: 1
        text-align: left

        >section
            padding: 1rem 0rem 1rem 1rem

        >section+section, >section:first-child
            border-bottom: 1px solid $light-grey

        svg
            height: .75rem
            width: .75rem
            margin-right: .2rem

        .side-by-side
            display: flex
            align-items: center

            >*:last-child
                padding-left: 1rem

        button
            background-color: #fff
            font-size: .85rem
            padding: .5rem 0 0

            &:hover
                font-weight: 700
                text-decoration: none


        .Collections
            li
                padding: .25rem 0rem

    .main-panel
        border-left: 1px solid $light-grey
        flex: 4
        height: 100%
        overflow-x: hidden
        padding: 0 2rem 3rem

        .List
            display: flex
            flex-direction: column
            height: 100%

            ol
                overflow-y: auto
                 
                >li, >div
                    //line-height: 1.25rem
                    //margin-right: 3rem
                    //text-align: left
                    
                    .item
                        //padding: 1rem 2rem

        .Form
            height: 100%
            display: flex
            flex-direction: column
            
	        .form-box
                display: flex;
                flex-direction: column;

                form
                    overflow-y: auto

                    .form-group
                        align-items: center
                        display: flex
                        margin: 1rem 0rem
                        
                        >.List
                            margin: 2.5rem 0
                            
                            >.button-row
                                position: absolute
                                left: 3rem
                                bottom: -2.5rem
                                margin: 0//.5rem 2rem
                                
                                >.btn-yellow
                                    font-size: .9rem
                                    padding: .35rem 1rem .2rem
                                    border-radius: .3rem
                                    box-shadow: 1px 2px 2px #666
                                    
                        
                        &:not(.vertical) >label
                            font-weight: bold
                            color: inherit
                            
                        >*:first-child
                            flex: 1
                        >*:nth-child(2)
                            flex: 6
                            
                        &.vertical
                            flex-direction: column
                            align-items: center
                            margin: 3rem 0
                            
                            >label
                                text-align: center
                                margin-right: 0

                                
            .btn-row
                margin-top: 1rem   

