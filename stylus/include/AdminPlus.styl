.AdminPlus
    height: 100%
    margin-top: 5rem
    
    section
        margin: 0
        padding: 0
    
    >div:first-child
        display: flex
        flex-direction: column
        align-items: center
        padding-top: 2rem

        >button
            width: 20rem
            background-color: $sun-yellow
            color: black
            padding: 1.25rem 1.5rem
            margin: 1.25rem
            font-size: 1.4rem
            border-radius: .5rem
            border: 1px solid transparent
            box-shadow: 1px 1px 5px
            
            &:hover
                background-color: lighten($sun-yellow, 15%)
                
    .views
        height: 100%
    
    .MemberTypeahead
        margin-top: 3rem
