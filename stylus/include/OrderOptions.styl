.OrderOptions
    .content
        display: flex
        flex-wrap: wrap

    ol
        text-align: left
        
        li
            display: flex
            align-items: center
            &.editable
                padding: .25rem 0
                
            >.cell:first-child
                min-width: 150px

            span:first-child
                width: 8rem
            select
                height: 2rem
                padding: .3rem .6rem
                background-color: #fff
                border-radius: .15rem
                border: 1px solid $grey
                &:focus
                    box-shadow: 0 0 3px 1px $grey
                &:disabled
                    opacity: .4
                    
    @media only screen and (max-width: 767px)
        .content .edit-summary
            margin: 1.5rem 0
