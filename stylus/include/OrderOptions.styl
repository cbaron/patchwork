.OrderOptions
    .content
        display: flex
        flex-wrap: wrap

    ol
        text-align: left
        
        li
            display: flex
            align-items: center
            &.editable
                padding: .25rem 0
                
            >.cell:first-child
                min-width: 150px

            span:first-child
                width: 8rem
            select
                &:disabled
                    opacity: .4
                    
    .seasonal-items
        margin-top: 1rem

        h3
            color: $sun-red
            font-weight: bold
        >div >div
            padding-left: 1rem
            >span:first-child
                font-weight: bold
                margin-right: .5rem
                    
    @media only screen and (max-width: 767px)
        .content .edit-summary
            margin: 1.5rem 0
    
    @media only screen and (max-width: 500px)
        ol li
            display: block
            >span
                margin: .5rem 0 .15rem
                display: block
                
