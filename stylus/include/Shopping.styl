.Shopping
  padding: 2rem

  h1
    margin-left: 0
    padding-top: 0

  .content
    display: flex

    .categories-sidebar
      flex: 1
      padding: .5rem
      margin: .5rem
      padding-left: 1rem
      border-radius: .5rem
      background-color: $light-manila

      h4
        color: $sun-red
        margin-bottom: .75rem

      ul
        li
          margin: .5rem 0
          font-size: 1rem
          font-weight: bold
          cursor: pointer

    .ViewList
      flex: 6
      padding: 0
      margin: 0

    .list
      display: flex
      flex-wrap: wrap

      .shopping-item
        width: 30%
        min-width: 320px
        margin: .5rem
        background-color: $light-manila
        border-radius: .5rem
        display: flex
        flex-direction: column
        padding: 1.25rem

        .name
          font-weight: bold

        .description
          flex: 1

        .price
          color: $sun-red
          >span
            margin-left: .75rem
            font-weight: bold
            font-size: 1.1rem

        >div
          padding: .5rem 0

        img
          width: 100%

  @media only screen and (max-width: 767px)
    .content
      display: block

      .categories-sidebar
        h4
          text-align: center
        ul
          display: flex
          justify-content: center
          flex-wrap: wrap
          li
            margin: .5rem 1rem

      .list
        justify-content: center