.Shopping
  padding: 2rem

  .List
    padding: 0
    margin: 0

  .list
    display: flex
    flex-wrap: wrap

    >li
      width: 30%
      min-width: 320px
      margin: .5rem
      background-color: $light-manila
      border-radius: .5rem

      >.item
        white-space: normal
        height: 100%

  .shopping-item
    display: flex
    flex-direction: column
    height: 100%
    padding: 1.25rem

    .description
      flex: 1

    .price
      color: $sun-red
      >span
        margin-left: 1rem

    >div
      padding: .5rem 0

    img
      width: 100%