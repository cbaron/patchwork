.Summary
    .summaries
        
        >div:first-child
            font-size: 1.2rem
            color: black
            margin: 2rem 0 .5rem
    
    .share-summary
        border: 1px solid #e7e7e7
        border-radius: .4rem
        padding: 1rem
        overflow: hidden
        background-color: #fafafa
        margin-bottom: 3rem
        box-shadow: 1px 1px 2px #666

        .share-label-wrapper
            display: flex
            justify-content: center
            
            .share-label
                margin: .5rem 0 3rem
                width: 50%
                border-radius: 0
                
                >div:nth-child(2)
                    margin: .15rem 0
                
        .item-row
            display: flex
            align-items: center
            padding: .75rem .5rem
            &:not(:last-child)
                border-bottom: 1px solid #ddd
            
            >div
                width: 33%
                
                &:last-child
                    text-align: right
                
                &:nth-child(2)
                    text-align: left

        .section-title
            background-color: $sun-red
            color: white
            font-size: 1.1rem
            padding: .5rem 0
            text-align: center

        .item-label
            font-weight: bold
            margin-right: .25rem

        .pickup-dates
            padding: 2rem .5rem
            display: flex
            flex-wrap: wrap

            .pickup-date
                width: 3.5rem
                font-size: .8rem
                background-color: black
                box-shadow: 1px 2px 5px #666
                color: white
                cursor: pointer
                padding: .65rem
                margin: 1px
                text-align: center
                line-height: 1.05
                
                &.selected
                    background-color: $sun-red

        .total
            color: black
            margin-top: 3rem
            font-weight: bold
            text-align: center

        .share-total
            margin: 20px 0 35px;

    .grand-total
        font-size: 1.3rem;
        font-weight: 600;
        margin: 25px auto;
        color: black;

    .payment
        border: 1px solid;
        border-radius: 10px;
        background-color: #f7f7f7;
        padding: 0 20px;

        .signup-header
            border: none;
            padding: 25px 0;
            margin: 0;

        .payment-options
            margin: 0 auto 10px;
            text-align: center;
        
            .payment-option
                background-color: darken(white, 5%);
                color: #c98702;
                border: 1px solid #bbb;
                border-radius: 10px;
                box-shadow: 1px 2px 5px #ccc;
                cursor: pointer;
                display: inline-block;
                font-family: "RalewayRegular";
                padding: 10px;
                margin: 5px;
                text-align: center;
                width: 40%;

                &:hover
                    background-color: rgba(201, 135, 2, .1);
                
                &.selected
                    background-color: rgba(201, 135, 2, .3);

                >div:nth-child(2)
                    color: black;
                    font-size: .75rem;

                .method-total
                    font-weight: bold;

        form

            .credit-card-info
                margin-top: 25px;
            
                input
                    width: 300px;
                
                .form-control-feedback
                    left: 275px;

            .number
                margin-bottom: 3px;

            .expiration

                input
                    display: inline-block;

                #exp_month
                    width: 100px;

                #exp_year
                    width: 125px;

                .form-control-feedback
                    
                    &:nth-child(2)
                        left: 75px;
                    
                    &:nth-child(5)
                        left: 200px;

            .cvc
                    
                input
                    width: 110px;
                    display: inline-block;

                .form-control-feedback
                    &:nth-child(2)
                        left: 85px;

        button
            position: relative;
            margin-bottom: 20px;

            &.has-spinner
                color: #5cb85c;

                &:focus,
                &:hover
                    color: #449d44;

    
