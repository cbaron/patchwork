.Summary {

    .share-summary {
        border: 1px solid;
        border-radius: 10px;
        background-color: #f7f7f7;
        margin-bottom: 5px;
        padding: 0 15px;

        .signup-header {
            margin: 0;
            padding: 15px 0;
        }

        .share-label-wrapper {
            margin: 0 auto;
            text-align: center;
            border-top: 1px solid #666;
            padding-top: 20px;
        
            .share-label {
                width: 155px;
                background-color: darken(white, 5%);
                color: #c98702;
                border: 1px solid #bbb;
                border-radius: 10px;
                box-shadow: 1px 2px 5px #ccc;
                display: inline-block;
                font-family: "RalewayRegular";
                padding: 10px;
                margin: 20px auto;
                text-align: center;

                >div {
                    &:first-child {
                        font-size: 1.25rem;
                    }

                    &:nth-child(2) {
                        color: #155D75;
                        font-size: .75rem;
                    }
                }
            }
        }

        .section-title {
            color: #c98702;
            font-size: 1.1rem;
            margin-top: 35px;
            margin-bottom: 10px;
        }

        .item-label {
            color: #155D75;
            margin-bottom: 5px;
        }

        .date {
            color: #155D75;
            display: inline-block;

            &:not(:last-child):after {
                content: ", ";
            }
        }

        .total {
            color: black;
            margin-top: 15px;
            font-weight: bold;
        }

        .share-total {
            margin: 20px 0 35px;
        }

    }

    .grand-total {
        font-size: 1.3rem;
        font-weight: 600;
        margin: 25px auto;
        color: black;
    }

    .payment {
        border: 1px solid;
        border-radius: 10px;
        background-color: #f7f7f7;
        padding: 0 20px;

        .signup-header {
            border: none;
            padding: 25px 0;
            margin: 0;
        }

        .payment-options {
            margin: 0 auto 10px;
            text-align: center;
        
            .payment-option {
                background-color: darken(white, 5%);
                color: #c98702;
                border: 1px solid #bbb;
                border-radius: 10px;
                box-shadow: 1px 2px 5px #ccc;
                cursor: pointer;
                display: inline-block;
                font-family: "RalewayRegular";
                padding: 10px;
                margin: 5px;
                text-align: center;
                width: 40%;

                &:hover {
                    background-color: rgba(201, 135, 2, .1);
                }
                
                &.selected {
                    background-color: rgba(201, 135, 2, .3);
                }

                >div:nth-child(2) {
                    color: black;
                    font-size: .75rem;
                }

                .method-total {
                    font-weight: bold;
                }
            }
        }

        form {

            .credit-card-info {
                margin-top: 25px;
            
                input {
                    width: 300px;
                }
                
                .form-control-feedback {
                    left: 275px;
                }
            }

            .number {
                margin-bottom: 3px;
            }

            .expiration {

                input {
                    display: inline-block;
                }

                #exp_month {
                    width: 100px;
                }

                #exp_year {
                    width: 125px;
                }

                .form-control-feedback {
                    
                    &:nth-child(2) {
                        left: 75px;
                    }
                    
                    &:nth-child(5) {
                        left: 200px;
                    }
                }
            }

            .cvc {
                    
                input {
                    width: 110px;
                    display: inline-block;
                }

                .form-control-feedback {
                    &:nth-child(2) {
                        left: 85px;
                    }
                }
            }
        }

        button {
            position: relative;
            margin-bottom: 20px;

            &.has-spinner {
                color: #5cb85c;

                &:focus,
                &:hover {
                    color: #449d44;
                }
            }
        }

    }
    
    @media only screen and (max-width: 767px) {
        .summary {

            .share-summary {

                span {
                    padding-left: 0;
                    padding-right: 4px;
                }

                .text-center {
                    text-align: left;
                }

                .item-label {
                    margin: 0;
                }

                .date {
                    margin-right: 0;
                }

                .price, .dropoff-location, .dropoff-address {
                    margin-bottom: 5px;
                }

                .shareoptionlabel, .price, .delivery-method, .dropoff-location, .weeks-selected {
                    padding-left: 15px;
                }

                .share-total {
                    text-align: center;
                }
            }

            .payment {

                .payment-options {

                    .payment-option {
                        display: block;
                        width: 95%;
                        margin-bottom: 15px;
                    }

                }

                form {
                    #number {
                        width: 95%;
                    }

                    #exp_month {
                        margin-bottom: 5px;
                    }

                }
            }
        }
    }

}