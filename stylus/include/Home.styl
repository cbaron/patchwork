.Home
    position: relative
    
    &.img-loaded
        .overlay
            opacity: 1
            
    >img
        width: 100%
        height: auto
        min-height: 25rem
        margin: 0
                
    .overlay
        position: absolute
        width: 100%
        height: 100%
        z-index: 1
        top: 0
        background-color: rgba(0,0,0,.6)
        opacity: 0
    
        >div:first-child
            text-align: center
            padding: 4rem 2rem 3rem
            color: white
            font-size: 1.75rem
                
        >div:nth-child(2)
            text-align: center

            >button
                padding: 1rem 1.6rem
                font-size: 1.4rem
                box-shadow: none


    @media only screen and (min-width: 1500px)
        .overlay
            >div:first-child
                font-size: 2rem
                
            >div:nth-child(2) >button
                font-size: 1.6rem
                padding: 1rem 1.6rem
                
    @media only screen and (max-width: 767px)
        .overlay
            >div:first-child
                font-size: 1.5rem
                    
            >div:nth-child(2) >button
                font-size: 1.25rem
                padding: .9rem 1.4rem
                
    @media only screen and (max-width: 475px)
        .overlay
            >div:first-child
                font-size: 1.3rem
                    
            >div:nth-child(2) >button
                font-size: 1.1rem
                padding: .8rem 1.25rem