.Home
    height: 43rem
    font-family: "RalewayRegular"
    position: relative
    
    &.bg-loaded
        background-color: rgba(0,0,0,.5)
    
        &::before
            fadeBgImg( 'cornucopia.jpg' )
    
    >div:first-child
        text-align: center
        padding: 9rem 0 7rem
        line-height: 1.1
        
        >span
            color: white
            font-size: 2.8rem
            
    >div:nth-child(2)
        text-align: center

        >button
            background-color: $sun-yellow
            color: black
            width: 19rem
            padding: 1.9rem 0
            font-size: 2.25rem
            border-radius: .8rem
            border: none
            
            &:hover
                opacity: .95