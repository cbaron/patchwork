.ManageCustomer, .AccountHome
    margin: 2rem 3rem 4rem
    
    input:focus
        border-color: initial

    .main-search
        display: flex
        justify-content: center
        align-items: center
        
        .MemberTypeahead input:focus
            border-color: initial

    >.section:not(:first-of-type)
        border-top: 1px solid $divider-grey
        margin-top: 2rem
        
    .section-heading
        display: inline-block
        margin: 2rem 0 1rem
        >div, >span
            display: inline-block
            font-weight: bold
            margin: 0 .5rem
            
    h3
        display: inline-block
        color: $sun-red
        font-weight: bold
        margin: 0
        font-size: 1.2rem
    
    ol
        margin-bottom: 0
        -webkit-padding-start: 0
        
    .cell, .ms-ctn
        font-size: .9rem
        font-weight: bold
        padding: .25rem
        white-space: nowrap
        
        &:first-child
            border-right: 1px solid black
            
    .edited
        color: $edit-green
        
    button
        display: inline-block
        font-size: .9rem
        border: 1px solid transparent
        padding: .5rem .8rem
        letter-spacing: 1px
        margin: 0
        text-align: center
        border-radius: .25rem
        color: #fff
        &:focus
            outline: 0
        &.reset-btn
            background-color: transparent
            text-decoration: underline
            color: $blue
            font-size: 1rem
            letter-spacing: 0
            padding: 0 .5rem
        &.save-btn
            background-color: $sun-yellow
            color: black
            
    select:focus
        outline: 0

    .original-price
        color: $edit-red
    
    .new-price
        color: $edit-green

    .price-change
        color: $edit-green
        
    .is-negative
        color: $negative-red
    
    .is-positive
        color: green

    .content        
        .data
            flex: 1
                    
        .edit-summary
            flex: 1
            margin-left: 3rem
            background-color: white
            font-weight: bold
            min-width: 30%
            box-shadow: 1px 1px 5px #666
            
            >div
                &:first-child
                    border-bottom: 1px solid rgba(0,0,0,.1)
                    padding: .75rem
                    font-weight: bold
                    font-family: "RalewayRegular"
                    background-color: $sun-red
                    color: white
                    
                &:nth-child(2)
                    flex: 1 1 auto
                    padding: 1rem
                    >div
                        padding-bottom: .25rem
                        >span
                            padding: 0 1rem
                            font-weight: normal
                            &:first-child
                                color: $edit-red
                            &:last-child
                                color: $edit-green
                                
                &:nth-child(3)
                    border-top: 1px solid rgba(0,0,0,.1)
                    padding: .75rem
                    text-align: center

@media only screen and (max-width: 767px)
    .ManageCustomer, .AccountHome
        margin: 2rem 1rem