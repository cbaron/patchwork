.SharePatch
    padding: 1rem
    border-radius: 1rem
    margin: 3rem 2rem
    background-color: $light-manila

    .section-heading
        display: block
        text-align: center
        margin: 0 0 2rem
        
        h3
            color: inherit
            font-size: 1.4rem
            line-height: 1.8rem

    .content
        >div
            margin: auto

            li
                .adjustment
                    float: right
                    font-size: 1.1rem
                    font-weight: bold

                &.line-item
                    border-bottom: 1px solid lightgray
                    padding-bottom: .25rem
                    margin-bottom: 1rem
                    
                    &:first-child
                        font-weight: bold
                        
                        >span:first-child
                            float: left
                        >span:last-child
                            float: right
                            
                    &.options
                        >div:not(:first-child), ul
                            margin-left: 2rem

                &:last-child
                    font-weight: bold
                    font-size: 1.3rem
                    text-align: center

                span
                    margin: 0 .5rem


            .email
                margin-top: 1rem
                text-align: center

                input
                    margin: 0 .5rem

            .ButtonFlow 
                margin: 1rem
                text-align: center
                
                button
                    padding: .75rem
                    font-size: 1rem
                
                .reset-btn
                    background-color: #d7d7d7
                    margin-left: 1rem
                    text-decoration: none
                    color: inherit
                
    @media only screen and (max-width: 767px)
        margin: 3rem 0
