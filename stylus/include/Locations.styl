.Locations

    section
        &:not(:nth-child(2)), &:nth-child(2) >p
            padding: 2rem 20%

        &:nth-child(odd)
            color: #e7e7e7
            background-color: $sun-red
            
            >h2
                color: white
            
            >ul .location >div:first-child
                color: white
                font-weight: bold
        
    h1, h2
        color: $sun-red
        letter-spacing: 0
      
    h1
        margin: 3rem 20%
        font-weight: bold
        font-size: 1.7rem
        
    h2
        margin-bottom: .25rem
        font-size: 1.3rem
        font-weight: bold
        
    ul
        display: flex
        flex-wrap: wrap
        
        .location
            margin: .75rem 0
            width: 50%

            >div
                &:first-child
                    color: $sun-red
                >a
                    color: inherit
        
    .map-wrap
        height: 20rem
        background-color: #e7e7e7

        div:first-child
            height: 100%
            
            .info-window
                font-family: "RalewayRegular"
                height: auto
                
                >div:first-child
                    color: black
                    font-size: 1.1rem
                    font-weight: 300
                    border-bottom: 2px solid $sun-red
                    padding-bottom: .25rem
                
                >div:nth-child(2)
                    color: #666
                    font-size: .8rem
                    text-transform: uppercase
                    margin: .5rem 0 1rem
                    
                >div:last-child >div >a
                    color: $sun-red
            
        .legend
            background-color: #fff
            padding: .75rem
            margin: .75rem
            border: 1px solid #000
            
            >div
                margin-bottom: .25rem
                position: relative
                margin-left: 1.25rem
                font-size: .8rem
                
                &.farmer-market
                    &::before
                        listCircle($sun-red, 10px, .15rem)
                &.retail-outlet
                    &::before
                        listCircle($yellow, 10px, .15rem)
                &.restaurant
                    &::before
                        listCircle($dark-blue, 10px, .15rem)
                &.group-location
                    &::before
                        listCircle($orange, 10px, .15rem)
                &.delivery-range
                    &::before
                        content: ""
                        position: absolute
                        width: .75rem
                        height: .75rem
                        background-color: $sun-red
                        opacity: .5
                        top: .1rem
                        left: -1rem
                       
    .button-row
        display: flex
        justify-content: center
        margin: 3rem 0
        
        >button
            color: black
            background-color: $sun-yellow
            box-shadow: 3px 3px 5px #666
            font-size: 1.25rem
            padding: .75rem 1.3rem
            border-radius: .5rem
            border: 1px solid transparent
            font-family: "RalewayRegular"
            
            &:hover
                background-color: lighten($sun-yellow, 15%)