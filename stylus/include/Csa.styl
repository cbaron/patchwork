.Csa

    margin: 5rem 20% 0
        
    h2
        color: $sun-red
        margin-bottom: 1.5rem
    
    h3
        text-align: center

    .csa-fit
        >p
            margin: 0 
        ul
            display: inline-block
            margin-bottom: 4rem
            
            li
                list-style-type: disc
                list-style-position: inside

    .csa-contents
        
        >h2
            margin-bottom: 0.5rem
            
        .share-examples
            display: flex
            flex-wrap: wrap
            justify-content: center
            margin: 2rem -15%
            
            >div
                text-align: center
                width: 20rem
                margin: 1rem 2rem
                
                h4
                    color: $sun-red
                    font-size: 1.4rem
                    
                >div img
                    height: 7.5rem
                    
                >div:nth-child(3)
                    color: $orange
                    font-size: 1.2rem
                    margin: .5rem 0
                    
                >ul
                    display: flex
                    flex-wrap: wrap
                    
                    li
                        width: 50%
                        color: #666
                        text-align: center
                        
        .share-descriptions
            margin: 3rem 0 4rem
            
            .sign-up
                color: $orange
                text-transform: uppercase
                cursor: pointer
            
            >div
                &:first-child
                    margin-bottom: 2rem
                    
                >div
                    font-size: 1.4rem
                    margin-bottom: .25rem
                    
                    >span:first-child
                        color: $sun-red

                    >span:nth-child(2)
                        padding: 0 .25rem
        
        >div:last-child
            display: flex
            justify-content: center
            
            >button
                background-color: $sun-yellow
                box-shadow: 3px 3px 5px #888
                font-size: 1.6rem
                padding: 1.2rem 1.6rem
                border-radius: .6rem
                border: 1px solid transparent
                font-family: "RalewayRegular"

    .how

        img
            display: block
            margin: 25px auto
            max-height: 400px
            max-width: 100%

        .farmpickup,
        .group-deliveries
            margin-bottom: 40px

            span:first-child
                font-weight: bold
            
        .delivery-matrix
            display: flex
            justify-content: center
            
            .cell
                min-width: 10rem
                //width: 115px
                border: 1px solid $sun-red
                padding: .25rem .75rem
                margin: .05rem
                color: $sun-red
                font-size: 1.1rem
                text-align: center
            
            >div
                //display: flex
                
                >div
                    //min-width: 800px
                    display: flex
                    
                    &:first-child
                        .cell
                            color: white
                            background-color: $sun-red


         


                    
        .non-size-options
            margin-bottom: 40px

            ul
                margin-left: 30px
            
            .option
                padding: 30px 0px
            
            .add-on-table
                border: 1px solid black
                width: 70%
                margin: 30px 15%

                .add-on-row
                    display: flex
                    align-items: center
                    flex-wrap: wrap
                    width: 100%
                    border-bottom: 1px solid black

                    &:last-child
                        border-bottom: none
                    
                    .add-on-name
                       font-weight: bold
                       color: $sun-yellow
                       width: 15%
                       text-align: center
                    
                    .add-on-details
                        display: flex
                        align-items: center
                        justify-content: space-between
                        border-left: 1px solid black
                        width: 85%

                        div
                            padding-left: 10px
                        
                        .add-on-price
                            font-weight: bold
                            width: 15%
                            text-align: center
                        
                        .add-on-paragraph
                            width: 55%
                        
                        .add-on-image
                            width: 30%
                            padding-right: 10px
                        
    @media only screen and (max-width: 375px)
        .first-column
            margin-bottom: 0
        
        .second-column
            margin-top: 0

    @media only screen and (max-width: 900px)
        .how .non-size-options .add-on-table
            width: 100%
            margin: 30px 0
        
    @media only screen and (max-width: 650px)
        .how .non-size-options .add-on-table
            display: block
            border: none
            width: 100%
            margin: 15px 0

            .add-on-row
                display: block
                border-bottom: none

                .add-on-name
                    width: auto
                    text-align: left
                
                .add-on-details
                    display: block
                    border-left: none
                    width: auto

                    div
                        padding-left: 0
                    
                    .add-on-price
                        width: auto
                        text-align: left
                        margin-bottom: 10px
                    
                    .add-on-paragraph
                        width: auto
                    
                    .add-on-image
                        width: auto
                        padding-right: 0
                    
                
            
        
    
    
