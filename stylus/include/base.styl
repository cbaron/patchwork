div.container-fluid
    display: flex
    flex-direction: column

section
    padding: 2.5rem 20% 0
    
    &:first-of-type
        padding: 0 20% 2.5rem
        
h1, h2
    color: $sun-red
    letter-spacing: 0

h1
    margin: 0
    padding: 3rem 20%
    font-weight: bold
    font-size: 1.7rem
    
h2
    font-size: 1.3rem

ol
    -webkit-margin-before: 0rem
    -webkit-margin-after: 0rem
    -webkit-padding-start: 0rem

img
    opacity: 1
    transition: opacity .5s
    &[data-src]
        opacity: 0
        
a
    cursor: pointer
    
.link
    color: $sun-red
    cursor: pointer
    &:hover
        text-decoration: underline
        
.fd-hidden
    display: none !important
    
.animate-in
    animation: fadeIn .3s ease-in-out

.animate-out
    animation: fadeOut .3s ease-in-out

.animate-in-slow
    animation: fadeIn 3s ease-in-out

.animate-out-slow
    animation: fadeOut 3s ease-in-out

@keyframes fadeIn
    from { opacity: 0; }
    to { opacity: 1; }

@keyframes fadeOut
    from { opacity: 1; }
    to { opacity: 0; }
    
@media only screen and (max-width: 767px)
    section
        padding: 2.5rem 5% 0
        
        &:first-of-type
            padding: 0 5% 2.5rem
            
    h1
        padding: 3rem 5%
