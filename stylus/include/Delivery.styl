.Delivery

    .has-error
        .error
            text-align: center;
            margin-top: 15px;
            margin-bottom: 15px;

    .delivery-options
        padding: 3rem 0
        
        &:not(:first-child)
            border-top: 1px solid #ccc

        .options
            margin: 0 auto;
            text-align: center;
        
        .delivery-option
            background-color: $sun-red
            color: white
            box-shadow: 1px 2px 5px #ccc
            border-radius: .4rem
            cursor: pointer
            display: inline-block
            padding: 10px
            margin: 5px
            text-align: center

        .feedback-messages
            text-align: center;
            font-weight: bold;

            .message
                margin-left: 16%;
                text-align: left;

            .dropoff-message
                text-align: left;
    
    .dropoff
        background-color: $sun-red
        color: white
        box-shadow: 1px 2px 5px #ccc
        border: 1px solid transparent
        border-radius: .35rem
        cursor: pointer
        display: inline-block
        padding: 10px
        margin: 5px
    
    @media only screen and (max-width: 800px)

        .delivery .delivery-options .share-label
            width: 148px;
    
    @media only screen and (max-width: 767px)
        .delivery

            .delivery-options

                .share-label
                    text-align: center;
                    font-size: 1.2rem;
                    margin: 0 auto 30px;
                    width: 100%;

                .delivery-option
                    display: block;
                    border: 1px solid #ccc;
                    width: 95%;
                    text-align: center;
                    margin: 10px auto;
                    background-color: rgba(201, 135, 2, .1);

                .feedback-messages
                    .message
                        margin-left: 0;
                        text-align: center;

                    .dropoff-message
                        text-align: center;
                        margin: 15px auto 5px;

            .dropoff
                margin: 5px auto;
                width: 90%;