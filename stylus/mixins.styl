bgImg( name )
    $url = $bucket + name
    background-image: url( $url )

listCircle( color, size=5px, top=.5rem )
    content: ""
    position: absolute
    width: size
    height: size
    background-color: color
    top: top
    left: -1rem
    border-radius: 50%
    
dropzone()
    content: "Drop here to move item."
    text-align: center
    border: 2px dashed $sun-red
    color: black
    border-radius: .25rem
    font-size: .75rem
    width: 100%
    padding: .25rem
    margin: .5rem 3rem
    
createArrow( $color, $up )
    if $up
        background-image: linear-gradient(135deg, transparent 47%, $color 53%), linear-gradient(45deg, $color 53%, transparent 47%);
    else
        background-image: linear-gradient(45deg, transparent 47%, $color 53%), linear-gradient(135deg, $color 53%, transparent 47%);

    background-position: 6px 15px, 11px 15px
    background-size: 5px 5px, 5px 5px
    background-repeat: no-repeat