// Forms

form-validation($color)
    .feedback,
    .form-label
        color: $color       
    .form-input
        border-color: darken($color, 15%)
    .form-input,
    .input-borderless,
    .input-flat
        background-color: lighten($color, 90%)
        
style-placeholder()
    &::-webkit-input-placeholder
        font-size: .9rem
        font-style: italic
    &::-moz-placeholder
        font-size: .9rem
        font-style: italic
    &:-ms-input-placeholder
        font-size: .9rem
        font-style: italic
    &:-moz-placeholder
        font-size: .9rem
        font-style: italic
        
// Buttons

set-btn-color(color=$dark-gray, bg-color=white)
    color: color
    background-color: bg-color
    border-color: color
    &:hover, &:focus
        background-color: color
        color: bg-color
    &:active
        background-color: lighten(color, 25%)
        color: bg-color
        border-color: lighten(color, 25%)
    