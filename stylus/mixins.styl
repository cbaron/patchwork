bgImg( name )
    $url = $bucket + name
    background-image: url( $url )

listCircle( color, size=5px, top=.5rem )
    content: ""
    position: absolute
    width: size
    height: size
    background-color: color
    top: top
    left: -1rem
    border-radius: 50%
    
dropzone()
    content: "Drop here to move item."
    text-align: center
    border: 2px dashed $sun-red
    color: black
    border-radius: .25rem
    font-size: .75rem
    width: 100%
    padding: .25rem
    margin: .5rem 3rem