.ManageCustomer
    padding: 7rem 1.5rem 1.5rem

    button
        display: inline-block
        font-size: .8rem
        border: 1px solid transparent
        padding: .25rem .8rem
        letter-spacing: 1px
        margin: 0
        text-align: center
        border-radius: .25rem
        color: white
        &:focus
            outline: 0

    .main-search
        display:flex
        justify-content: center
        align-items: center
        
        .form-grouping
            margin: 0
        
            input
                display: inline-block
                font-size: 1.2rem
                padding: .75rem .5rem
                width: 400px
        
            .form-label
                color: $gold
                font-size: 1.4rem

    h3
        display: inline-block
        color: #c98702
        font-weight: bold
        margin-top: 2rem
        font-size: 1.2rem
    
    ol
        margin-bottom: 0
        -webkit-padding-start: 0
        
    .CustomerInfo, .Seasons, .OrderOptions, .WeekOptions, .Transactions
        border-top: 1px solid #eee
        margin-top: 2rem
