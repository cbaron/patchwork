<div data-js="container" class="share-option col-sm-3">
    <div>{{label}}</div>
    <div class="option-total" data-js="optionTotal"></div>
    <select data-js="input" class="form-control">
        {{#each options}}
            <option value="{{id}}">{{label}}:  {{price}} / week</option>
        {{/each}}
    </select>    
</div>
