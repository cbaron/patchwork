<div data-js="container" class="container col-sm-4 col-sm-offset-4">
    <div class="heading">Login</div>
    <form class="form-horizontal">
        {{#each fields}}
            <div class="form-group">
                <label for="{{this.name}}" class="col-sm-3 control-label">{{this.label}}</label>
                <div class="col-sm-9">
                    <input type="{{this.type}}" class="form-control" data-js="{{this.name}}">
                </div>
            </div>
        {{/each}}
    </form>
    <div class="text-center">
        <button data-js="loginBtn" type="button" class="btn btn-primary">Log In</button>
    </div>
</div>
