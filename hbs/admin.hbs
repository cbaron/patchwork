<div data-js="container" class="col-sm-10 col-sm-offset-1">
    <div class="sub-heading">Resources</div>
    <div class="row mytable">
        <table data-js="table">
            <thead data-js="header">
                <tr class="clearfix">
                    {{#each fields}}
                        <th class="w{{this.width}}" data-sort="{{this.name}}">{{this.label}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody data-js="body"></tbody>
        </table>
    </div>
</div>
